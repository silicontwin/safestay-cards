---
// src/components/CardLayout.astro
export interface Props {
  title: string;
  ageRange: string;
  icon: string;
  color: string;
  questions: {
    common: string[];
    specific: string[];
  };
}

const { title, ageRange, icon, color, questions } = Astro.props;

const colorMap = {
  blue: "text-blue-700 bg-blue-50",
  green: "text-green-700 bg-green-50",
  yellow: "text-yellow-700 bg-yellow-50",
  purple: "text-purple-700 bg-purple-50"
};

const bgColor = colorMap[color] || colorMap.blue;
---

<div class="min-h-screen bg-gradient-to-b from-blue-50 to-blue-100 px-4 py-8">
  <div class="max-w-md mx-auto">
    <div class="bg-white rounded-xl shadow-lg p-6 mb-4">
      <a href="/" class="text-blue-600 hover:text-blue-800 inline-flex items-center mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-1">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
        </svg>
        Back to all cards
      </a>
      
      <div class="text-center mb-6">
        <span class="text-3xl block mb-2">{icon}</span>
        <h1 class="text-2xl font-bold mb-1">{title}</h1>
        <p class="text-gray-600">{ageRange}</p>
      </div>
      
      <div class="mb-6">
        <h2 class="text-lg font-medium text-gray-800 mb-3">Common Safety Questions</h2>
        <ul class="space-y-2">
          {questions.common.map(question => (
            <li class="bg-gray-50 p-3 rounded-lg">{question}</li>
          ))}
        </ul>
      </div>
      
      <div>
        <h2 class="text-lg font-medium text-gray-800 mb-3">Age-Specific Questions</h2>
        <ul class="space-y-2">
          {questions.specific.map(question => (
            <li class={`${bgColor} p-3 rounded-lg`}>{question}</li>
          ))}
        </ul>
      </div>
    </div>
    
    <div class="bg-white rounded-xl shadow-lg p-5 text-center">
      <a 
        href="/downloads/SafeStay_Cards_002.pdf" 
        class="block w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-4 px-6 rounded-lg transition-colors text-lg"
      >
        Download All Cards (PDF)
      </a>
    </div>
  </div>
</div>